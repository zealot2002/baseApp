<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="299dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/bg_dialog"
    android:minWidth="298dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dip"
        android:layout_marginRight="16dip"
        android:minHeight="80dip"
        android:orientation="vertical"
        android:paddingLeft="15dip"
        android:paddingRight="15dip">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dip"
            android:layout_centerHorizontal="true"
            android:lineSpacingExtra="10dip"
            android:maxWidth="210dip"
            android:textColor="@color/text_black"
            android:textSize="16sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/message"
            android:layout_below="@+id/title"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dip"
            android:lineSpacingExtra="10dip"
            android:maxWidth="210dip"
            android:textColor="@color/black_FF414141"
            android:textSize="16sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@drawable/bg_bottom_dialog"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/positiveButton"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="0.5dip"
            android:layout_weight="1"
            android:background="@drawable/selector_btn_dialog_right"
            android:text="取消"
            android:stateListAnimator="@null"
            android:textColor="@color/gray_FF666666"
            android:textSize="16sp" />

        <Button
            android:id="@+id/negativeButton"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="0.5dip"
            android:layout_marginTop="0.5dip"
            android:layout_weight="1"
            android:stateListAnimator="@null"
            android:background="@drawable/selector_btn_dialog_left"
            android:text="确定"
            android:textColor="#157efb"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>