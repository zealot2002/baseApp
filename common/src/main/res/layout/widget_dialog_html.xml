<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="62dp"
        android:layout_marginTop="87dp"
        android:background="@drawable/shape_dialog_web_view">

        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            tools:text="禁止性行为"
            android:textColor="@color/black_FF333333"
            android:textSize="16sp" />

        <View
            style="@style/split_line"
            android:id="@+id/view_line"
            android:layout_below="@id/tv_dialog_title" />

        <LinearLayout
            android:id="@+id/ll_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <View style="@style/split_line" />

            <Button
                android:id="@+id/bt_submit"
                android:stateListAnimator="@null"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:background="@drawable/btn_bg_round"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="我已阅读并同意"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <WebView
            android:id="@+id/wb_detail_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/ll_submit"
            android:layout_below="@id/view_line"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"
            android:overScrollMode="never"
            android:scrollbars="none"
            tools:ignore="WebViewLayout" />

    </RelativeLayout>
</LinearLayout>