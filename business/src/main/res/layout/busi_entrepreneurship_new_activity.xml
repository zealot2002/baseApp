<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/body_margin"
        android:layout_marginRight="@dimen/body_margin"
        >
        <!--联  系  人-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:id="@+id/tvContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联  系  人:   "
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_centerVertical="true"
                />
            <EditText
                android:id="@+id/etContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/tvContact"
                android:layout_centerVertical="true"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:background="@null"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line2_height"
                android:background="@mipmap/line2"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
        <!--联系电话-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系电话:   "
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_centerVertical="true"
                />
            <EditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/tvPhone"
                android:layout_centerVertical="true"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:background="@null"
                android:inputType="phone"
                android:maxLength="11"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line2_height"
                android:background="@mipmap/line2"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
        <!--工作要求-->
        <TextView
            style="@style/tv_style_white_14"
            android:text="创业信息:   "
            android:layout_marginTop="10dp"
            />
        <com.zzy.common.widget.MyEditText
            android:id="@+id/etEntrepreneurshipContent"
            android:layout_width="match_parent"
            android:layout_height="300px"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:paddingTop="10dp"
            android:paddingBottom="30dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@color/deep_blue"
            />
        <!--工作要求-->
        <TextView
            style="@style/tv_style_white_14"
            android:text="注：编辑人才画像标签请在“我的-我的档案”中进行操作"
            android:layout_marginTop="10dp"
            />
        <Button
            android:id="@+id/btnOk"
            android:layout_width="@dimen/btn_width"
            android:layout_height="@dimen/btn_height"
            android:background="@mipmap/btn_login"
            android:text="完成"
            android:textColor="@color/white"
            android:textSize="@dimen/btn_text_size"
            android:layout_marginTop="20dp"
            android:layout_gravity="right"
            android:layout_marginBottom="@dimen/bottom_margin"
            />
    </LinearLayout>
</ScrollView>
