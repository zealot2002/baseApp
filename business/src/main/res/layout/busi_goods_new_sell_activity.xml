<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/body_margin"
        android:layout_marginLeft="@dimen/body_margin"
        android:orientation="vertical"
        >
        <!--标       题-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            >
            <TextView
                android:id="@+id/tvName"
                style="@style/tv_style_white_14"
                android:layout_centerVertical="true"
                android:text="标        题:"
                />
            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/tvName"
                android:layout_centerVertical="true"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:background="@null"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line2_height"
                android:background="@mipmap/line2"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
        <!--联  系  人-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            >
            <TextView
                android:id="@+id/tvContact"
                style="@style/tv_style_white_14"
                android:layout_centerVertical="true"
                android:text="联  系  人 :   "
                />
            <EditText
                android:id="@+id/etContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/tvContact"
                android:layout_centerVertical="true"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:background="@null"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line2_height"
                android:background="@mipmap/line2"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
        <!--联系电话-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            >
            <TextView
                android:id="@+id/tvPhone"
                style="@style/tv_style_white_14"
                android:layout_centerVertical="true"
                android:text="联系电话 :   "
                />
            <EditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/tvPhone"
                android:layout_centerVertical="true"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:inputType="phone"
                android:maxLength="11"
                android:textSize="12sp"
                android:background="@null"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line2_height"
                android:background="@mipmap/line2"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
        <!--地        址-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            >
            <TextView
                android:id="@+id/tvAddress"
                style="@style/tv_style_white_14"
                android:layout_centerVertical="true"
                android:text="地         址:"
                />
            <EditText
                android:id="@+id/etAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/tvAddress"
                android:layout_centerVertical="true"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:background="@null"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line2_height"
                android:background="@mipmap/line2"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
        <!--价格-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            >
            <TextView
                android:id="@+id/tvPrice"
                style="@style/tv_style_white_14"
                android:layout_centerVertical="true"
                android:text="价        格:"
                />
            <EditText
                android:id="@+id/etPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/tvPrice"
                android:layout_centerVertical="true"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:background="@null"
                android:inputType="numberDecimal"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line2_height"
                android:background="@mipmap/line2"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
        <!--交易方式-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            >
            <TextView
                android:id="@+id/tvDealWay"
                style="@style/tv_style_white_14"
                android:layout_centerVertical="true"
                android:text="交易方式:"
                />
            <EditText
                android:id="@+id/etDealWay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/tvDealWay"
                android:layout_centerVertical="true"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:background="@null"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line2_height"
                android:background="@mipmap/line2"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
        <!--物品描述-->
        <TextView
            style="@style/tv_style_white_14"
            android:text="物品描述:   "
            android:layout_marginTop="10dp"
            />
        <com.zzy.common.widget.MyEditText
            android:id="@+id/etDesc"
            android:layout_width="match_parent"
            android:layout_height="300px"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:paddingTop="10dp"
            android:paddingBottom="30dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@color/deep_blue"
            />
        <!--商品图片（最多6张）-->
        <TextView
            style="@style/tv_style_white_14"
            android:text="商品图片（最多6张）:"
            android:layout_marginTop="10dp"
            />

        <!--完成-->
        <Button
            android:id="@+id/btnOk"
            android:layout_width="@dimen/btn_width"
            android:layout_height="@dimen/btn_height"
            android:background="@mipmap/btn_login"
            android:text="完成"
            android:textColor="@color/white"
            android:textSize="@dimen/btn_text_size"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="@dimen/bottom_margin"
            />
    </LinearLayout>
</ScrollView>
