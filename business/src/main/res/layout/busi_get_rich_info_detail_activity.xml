<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tvTitle"
                style="@style/tv_style_black1_16"
                android:layout_marginLeft="@dimen/body_margin"
                android:layout_marginRight="@dimen/body_margin"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/tvDate"
                style="@style/tv_style_gray_12"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="2dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:layerType="software"
                android:background="@drawable/dotted_line" />
            <!--<TextView-->
                <!--android:id="@+id/tvContent"-->
                <!--style="@style/tv_style_black2_14"-->
                <!--android:layout_marginLeft="@dimen/body_margin2"-->
                <!--android:layout_marginRight="@dimen/body_margin2"-->
                <!--android:layout_marginTop="5dp"-->
                <!--/>-->
            <WebView
                android:id="@+id/webView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbarSize="3dp"
                android:layout_marginTop="5dp"
                tools:ignore="WebViewLayout" />
            <RelativeLayout
                android:id="@+id/rlLike"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/white_oval"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/praise"
                    android:scaleType="fitXY"
                    android:layout_marginTop="20dp"
                    android:layout_centerHorizontal="true"
                    />
                <TextView
                    android:id="@+id/tvLikeNum"
                    style="@style/tv_style_gray_14"
                    android:layout_marginTop="120px"
                    android:layout_centerHorizontal="true"
                    />
            </RelativeLayout>
            <TextView
                android:id="@+id/tvLookNum"
                style="@style/tv_style_gray_12"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="@dimen/bottom_margin"
                />
        </LinearLayout>
        <ImageView
            android:id="@+id/ivPic"
            android:layout_width="62px"
            android:layout_height="32px"
            android:src="@mipmap/place_top"
            android:scaleType="fitXY"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="@dimen/body_margin"
            android:visibility="gone"
            />
    </FrameLayout>
</ScrollView>
