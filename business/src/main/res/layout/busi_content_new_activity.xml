<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/body_margin"
        android:layout_marginRight="@dimen/body_margin"
        >
        <!--内容标题-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:id="@+id/tvContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="内容标题:"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_centerVertical="true"
                />
            <EditText
                android:id="@+id/etTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/tvContact"
                android:layout_centerVertical="true"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:background="@null"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line2_height"
                android:background="@mipmap/line2"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
        <!--添加内容-->
        <TextView
            style="@style/tv_style_white_14"
            android:text="添加内容:"
            android:layout_marginTop="10dp"
            />
        <com.zzy.common.widget.MyEditText
            android:id="@+id/etContent"
            android:layout_width="match_parent"
            android:layout_height="300px"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:paddingTop="10dp"
            android:paddingBottom="30dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@color/deep_blue"
            />
        <!--图片（最多6张）：-->
        <TextView
            style="@style/tv_style_white_14"
            android:text="图片（最多6张）："
            android:layout_marginTop="10dp"
            />
        <!--tup-->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvPhotoPicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            />
        <Button
            android:id="@+id/btnOk"
            android:layout_width="@dimen/btn_width"
            android:layout_height="@dimen/btn_height"
            android:background="@mipmap/btn_login"
            android:text="完成"
            android:textColor="@color/white"
            android:textSize="@dimen/btn_text_size"
            android:layout_marginTop="20dp"
            android:layout_gravity="right"
            android:layout_marginBottom="@dimen/bottom_margin"
            />
    </LinearLayout>
</ScrollView>
