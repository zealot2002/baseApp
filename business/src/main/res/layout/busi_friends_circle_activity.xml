<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <Button
            android:id="@+id/btnNew"
            android:layout_width="@dimen/btn_width"
            android:layout_height="@dimen/btn_height"
            android:background="@mipmap/btn_login"
            android:text="发送朋友圈"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/body_margin"
            />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvDataList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="@dimen/home_bottom_line_height"
            android:background="@color/white"
            />
    </LinearLayout>
    <com.github.ielse.imagewatcher.ImageWatcher
        android:id="@+id/v_image_watcher"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <RelativeLayout
        android:id="@+id/rlMsg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/home_bottom_line_height"
        android:background="@color/divider"
        >
        <EditText
            android:id="@+id/etMsg"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_toLeftOf="@+id/tvSubmit"
            android:layout_marginRight="10dp"
            android:hint="输入内容"
            android:textSize="14sp"
            android:textColorHint="@color/text_gray"
            android:paddingLeft="10dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:background="@drawable/white_round_30"
            />
        <TextView
            android:id="@+id/tvSubmit"
            style="@style/tv_style_blue_14"
            android:text="发表"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            />
    </RelativeLayout>
</FrameLayout>
