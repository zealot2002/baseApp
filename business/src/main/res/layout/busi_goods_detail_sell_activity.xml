<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:hedgehog="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <com.bigkoo.convenientbanner.ConvenientBanner
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="500px"
            app:canLoop="true"
            android:background="@null"
            />
        <!--标       题-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:layout_marginRight="@dimen/body_margin"
            android:layout_marginLeft="@dimen/body_margin"
            >
            <TextView
                android:id="@+id/tvName"
                style="@style/tv_style_white_14"
                android:layout_centerVertical="true"
                android:text="标        题:"
                />
            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/tvName"
                android:layout_centerVertical="true"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:background="@null"
                android:ellipsize="end"
                android:enabled="false"
                android:focusable="false"
                android:maxLines="1"
                android:inputType="text"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line2_height"
                android:background="@mipmap/line2"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
        <!--评       分-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:layout_marginRight="@dimen/body_margin"
            android:layout_marginLeft="@dimen/body_margin"
            >
            <TextView
                android:id="@+id/tvScoreT"
                style="@style/tv_style_white_14"
                android:layout_centerVertical="true"
                android:text="评       分:"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tvScoreT"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                >
                <com.hedgehog.ratingbar.RatingBar
                    android:id="@+id/rbScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    hedgehog:starImageHeight="40px"
                    hedgehog:starImageWidth="40px"
                    hedgehog:starImagePadding="8px"
                    hedgehog:starEmpty="@mipmap/rating_normal"
                    hedgehog:starHalf="@mipmap/rating_normal"
                    hedgehog:starFill="@mipmap/rating_checked"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/tvScore"
                    style="@style/tv_style_white_12"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line2_height"
                android:background="@mipmap/line2"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
        <!--联  系  人-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:layout_marginRight="@dimen/body_margin"
            android:layout_marginLeft="@dimen/body_margin"
            >
            <TextView
                android:id="@+id/tvContact"
                style="@style/tv_style_white_14"
                android:layout_centerVertical="true"
                android:text="联  系  人:"
                />
            <EditText
                android:id="@+id/etContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/tvContact"
                android:layout_centerVertical="true"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:background="@null"
                android:enabled="false"
                android:focusable="false"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line2_height"
                android:background="@mipmap/line2"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
        <!--联系电话-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:layout_marginRight="@dimen/body_margin"
            android:layout_marginLeft="@dimen/body_margin"
            >
            <TextView
                android:id="@+id/tvPhone"
                style="@style/tv_style_white_14"
                android:layout_centerVertical="true"
                android:text="联系电话:"
                />
            <EditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/tvPhone"
                android:layout_centerVertical="true"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:inputType="phone"
                android:maxLength="11"
                android:textSize="12sp"
                android:background="@null"
                android:enabled="false"
                android:focusable="false"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line2_height"
                android:background="@mipmap/line2"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
        <!--地        址-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:layout_marginRight="@dimen/body_margin"
            android:layout_marginLeft="@dimen/body_margin"
            >
            <TextView
                android:id="@+id/tvAddress"
                style="@style/tv_style_white_14"
                android:layout_centerVertical="true"
                android:text="地         址:"
                />
            <EditText
                android:id="@+id/etAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/tvAddress"
                android:layout_centerVertical="true"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:background="@null"
                android:enabled="false"
                android:focusable="false"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line2_height"
                android:background="@mipmap/line2"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
        <!--价格-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:layout_marginRight="@dimen/body_margin"
            android:layout_marginLeft="@dimen/body_margin"
            >
            <TextView
                android:id="@+id/tvPrice"
                style="@style/tv_style_white_14"
                android:layout_centerVertical="true"
                android:text="价        格:"
                />
            <EditText
                android:id="@+id/etPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/tvPrice"
                android:layout_centerVertical="true"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:background="@null"
                android:inputType="numberDecimal"
                android:enabled="false"
                android:focusable="false"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line2_height"
                android:background="@mipmap/line2"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
        <!--交易方式-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:layout_marginRight="@dimen/body_margin"
            android:layout_marginLeft="@dimen/body_margin"
            >
            <TextView
                android:id="@+id/tvDealWay"
                style="@style/tv_style_white_14"
                android:layout_centerVertical="true"
                android:text="交易方式:"
                />
            <EditText
                android:id="@+id/etDealWay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/tvDealWay"
                android:layout_centerVertical="true"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:background="@null"
                android:enabled="false"
                android:focusable="false"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line2_height"
                android:background="@mipmap/line2"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
        <!--物品描述-->
        <TextView
            style="@style/tv_style_white_14"
            android:text="物品描述:"
            android:layout_marginTop="10dp"
            android:layout_marginRight="@dimen/body_margin"
            android:layout_marginLeft="@dimen/body_margin"
            />
        <com.zzy.common.widget.MyEditText
            android:id="@+id/etDesc"
            android:layout_width="match_parent"
            android:layout_height="400px"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:paddingTop="10dp"
            android:paddingBottom="30dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@color/deep_blue"
            android:layout_marginRight="@dimen/body_margin"
            android:layout_marginLeft="@dimen/body_margin"
            android:editable="false"
            />
        <!--tips-->
        <TextView
            style="@style/tv_style_white_14"
            android:text="温馨提示，注意交易安全，谨防上当受骗！"
            android:layout_marginTop="10dp"
            android:layout_marginRight="@dimen/body_margin"
            android:layout_marginLeft="@dimen/body_margin"
            />
        <!--举报-->
        <TextView
            android:id="@+id/tvReport"
            style="@style/tv_style_white_14"
            android:text="举报"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="@dimen/bottom_margin"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/body_margin"
            />
    </LinearLayout>
</ScrollView>
