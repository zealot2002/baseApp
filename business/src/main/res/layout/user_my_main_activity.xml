<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       >
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="100px"
           android:layout_marginLeft="@dimen/body_margin"
           android:layout_marginRight="@dimen/body_margin"
           >
           <ImageView
               android:id="@+id/ivUserHead"
               android:layout_width="80px"
               android:layout_height="80px"
               android:src="@mipmap/default_head"
               android:layout_marginLeft="20px"
               />
            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:text="Windir"
                android:layout_marginLeft="120px"
                />
           <TextView
               android:id="@+id/tvUserRemarks"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/white"
               android:textSize="12sp"
               android:text="东坑镇代表"
               android:layout_marginLeft="120px"
               android:layout_marginTop="40px"
               />
           <TextView
               android:id="@+id/tvUserScore"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/white"
               android:textSize="12sp"
               android:text="10积分"
               android:layout_alignParentRight="true"
               android:layout_centerVertical="true"
               android:layout_marginRight="20px"
               />
           <View
               android:layout_width="650px"
               android:layout_height="17px"
               android:background="@mipmap/line2"
               android:layout_alignParentBottom="true"
               />
       </RelativeLayout>
       <!--menu 1-->
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="10dp"
           android:layout_marginLeft="45px"
           android:layout_marginRight="45px">
           <Button
               android:id="@+id/btnMyArchives"
               style="@style/user_btn_style"
               android:text="我的\n档案" />
           <Button
               android:id="@+id/btnMyJob"
               style="@style/user_btn_style"
               android:text="我的\n招聘" />
           <Button
               android:id="@+id/btnMyPioneering"
               style="@style/user_btn_style"
               android:text="我的\n创业" />
       </LinearLayout>
       <!--menu 2-->
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="10dp"
           android:layout_marginLeft="45px"
           android:layout_marginRight="45px">
           <Button
               android:id="@+id/btnMyComment"
               style="@style/user_btn_style"
               android:text="我的\n评论" />
           <Button
               android:id="@+id/btnMyGoodsToBuy"
               style="@style/user_btn_style"
               android:text="我要买\n的东西" />
           <Button
               android:id="@+id/btnMyGoodsToSell"
               style="@style/user_btn_style"
               android:text="我要卖\n的东西" />
       </LinearLayout>
       <!--menu 3-->
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="10dp"
           android:layout_marginLeft="45px"
           android:layout_marginRight="45px">
           <Button
               android:id="@+id/btnMyLog"
               style="@style/user_btn_style"
               android:text="我的创\n业日志" />
           <Button
               android:id="@+id/btnSettings"
               style="@style/user_btn_style"
               android:text="系统\n设置" />
           <Button
               android:id="@+id/btnShareSoftware"
               style="@style/user_btn_style"
               android:text="分享\n软件" />
       </LinearLayout>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="注：\n1.积分可在线下兑换活动物品\n2.积分可兑换优先权\n3.最终解释权归本软件开发单位所有"
           android:textSize="14sp"
           android:textColor="@color/white"
           android:layout_marginLeft="50px"
           android:layout_marginBottom="20dp"
           />
    </LinearLayout>
</ScrollView>
