<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="120px"
        >
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!--title-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120px">
            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginTop="40px"
                android:text="张翠山"
                android:textColor="@color/white"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/tvScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tvUserName"
                android:layout_marginLeft="8px"
                android:layout_marginTop="40px"
                android:text="2018积分"
                android:textColor="@color/white"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全民创业大行动\n小农户增收致富大冲刺"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_centerInParent="true"
                />
            <View
                android:layout_width="500px"
                android:layout_height="21px"
                android:background="@mipmap/line1"
                android:layout_marginTop="86px"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30px"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/zhifubao_logo"
                />
        </RelativeLayout>
        <!--menu 1-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >
            <Button
                android:id="@+id/btnSpecialDk"
                style="@style/home_btn_style_1"
                android:text="特色东坑"
                />
            <Button
                android:id="@+id/btnIndustrialDistribution"
                style="@style/home_btn_style_1"
                android:text="产业分布"
                />
            <Button
                android:id="@+id/btnGetRichInfo"
                style="@style/home_btn_style_1"
                android:text="致富信息"
                />
            <Button
                android:id="@+id/btnEntrepreneurshipService"
                style="@style/home_btn_style_1"
                android:text="创业服务"
                />
            <Button
                android:id="@+id/btnEntrepreneurshipVanguard"
                style="@style/home_btn_style_1"
                android:text="创业先锋"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="28px"
            android:background="@mipmap/line3" />
        <ImageView
            android:id="@+id/ivPic"
            android:layout_width="match_parent"
            android:layout_height="240px"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="28px"
            android:background="@mipmap/line3" />
        <!--menu 2-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="45px"
            android:layout_marginRight="45px">

            <Button
                android:id="@+id/btnRecruit"
                style="@style/home_btn_style_2"
                android:text="我要\n招聘" />

            <Button
                android:id="@+id/btnEntrepreneurship"
                style="@style/home_btn_style_2"
                android:text="我要\n创业" />

            <Button
                android:id="@+id/btnBuyGoods"
                style="@style/home_btn_style_2"
                android:text="我要\n买东西" />

            <Button
                android:id="@+id/btnSellGoods"
                style="@style/home_btn_style_2"
                android:text="我要\n卖东西" />
        </LinearLayout>
        <!--menu 3-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45px"
            android:layout_marginRight="45px">
            <Button
                android:id="@+id/btnEntrepreneurshipHelp"
                style="@style/home_btn_style_2"
                android:text="创业\n求助" />
            <Button
                android:id="@+id/btnFeedback"
                style="@style/home_btn_style_2"
                android:text="创业\n点子" />
            <Button
                android:id="@+id/btnShareExperience"
                style="@style/home_btn_style_2"
                android:text="分享\n经验" />
            <Button
                android:id="@+id/btnEntrepreneurshipFriends"
                style="@style/home_btn_style_2"
                android:text="创业\n朋友圈" />
        </LinearLayout>

    </LinearLayout>
    </ScrollView>
    <com.zzy.common.widget.BottomNavBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>
