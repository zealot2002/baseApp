<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/body_margin"
        android:layout_marginRight="@dimen/body_margin"
        >
        <!--用户姓名-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:id="@+id/tvNameT"
                style="@style/tv_style_white_14"
                android:text="用户姓名:"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/tvName"
                style="@style/tv_style_white_14"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tvNameT"
                android:layout_centerVertical="true"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line2_height"
                android:background="@mipmap/line2"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
        <!--手机号码-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:id="@+id/tvPhoneT"
                style="@style/tv_style_white_14"
                android:text="手机号码:"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/tvPhone"
                style="@style/tv_style_white_14"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tvPhoneT"
                android:layout_centerVertical="true"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line2_height"
                android:background="@mipmap/line2"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
        <!--所属县-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:id="@+id/tvArea1T"
                style="@style/tv_style_white_14"
                android:text="所属县:"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/tvArea1"
                style="@style/tv_style_white_14"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tvArea1T"
                android:layout_centerVertical="true"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line2_height"
                android:background="@mipmap/line2"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
        <!--所属镇-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:id="@+id/tvArea2T"
                style="@style/tv_style_white_14"
                android:text="所属镇:"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/tvArea2"
                style="@style/tv_style_white_14"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tvArea2T"
                android:layout_centerVertical="true"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line2_height"
                android:background="@mipmap/line2"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
        <!--所属村-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:id="@+id/tvArea3T"
                style="@style/tv_style_white_14"
                android:text="所属村:"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/tvArea3"
                style="@style/tv_style_white_14"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tvArea3T"
                android:layout_centerVertical="true"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line2_height"
                android:background="@mipmap/line2"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
        <!--详细地址-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:id="@+id/tvAddressT"
                style="@style/tv_style_white_14"
                android:text="详细地址:"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/tvAddress"
                style="@style/tv_style_white_14"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tvAddressT"
                android:layout_centerVertical="true"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line2_height"
                android:background="@mipmap/line2"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
        <!--出生日期-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:id="@+id/tvBirthdayT"
                style="@style/tv_style_white_14"
                android:text="出生日期:"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/tvBirthday"
                style="@style/tv_style_white_14"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tvBirthdayT"
                android:layout_centerVertical="true"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line2_height"
                android:background="@mipmap/line2"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
        <!--性别-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:id="@+id/tvSexT"
                style="@style/tv_style_white_14"
                android:text="性别:"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/tvSex"
                style="@style/tv_style_white_14"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tvSexT"
                android:layout_centerVertical="true"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line2_height"
                android:background="@mipmap/line2"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
        <!--证件号码-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:id="@+id/tvIdNoT"
                style="@style/tv_style_white_14"
                android:text="证件号码:"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/tvIdNo"
                style="@style/tv_style_white_14"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tvIdNoT"
                android:layout_centerVertical="true"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line2_height"
                android:background="@mipmap/line2"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
        <!--用户类别-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:id="@+id/tvUserTypeT"
                style="@style/tv_style_white_14"
                android:text="用户类别:"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/tvUserType"
                style="@style/tv_style_white_14"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tvUserTypeT"
                android:layout_centerVertical="true"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line2_height"
                android:background="@mipmap/line2"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
        <!--是否企业注册-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:id="@+id/tvIsCompanyT"
                style="@style/tv_style_white_14"
                android:text="是否企业注册:"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/tvIsCompany"
                style="@style/tv_style_white_14"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tvIsCompanyT"
                android:layout_centerVertical="true"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line2_height"
                android:background="@mipmap/line2"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
        <!--技能标签-->
        <Button
            android:id="@+id/btnModify"
            android:layout_width="@dimen/btn_width"
            android:layout_height="@dimen/btn_height"
            android:background="@mipmap/btn_login"
            android:text="编辑资料"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="50dp"
            android:layout_gravity="right"
            />
    </LinearLayout>
</ScrollView>
